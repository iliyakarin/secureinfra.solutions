---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { CheckCircle, ArrowLeft } from "lucide-react";
---

<Layout title="Thank You | SecureInfra Solutions">
    <Navbar />
    <main class="min-h-[70vh] flex items-center justify-center pt-20">
        <div class="container mx-auto px-6 text-center">
            <div
                class="max-w-2xl mx-auto p-12 rounded-[2.5rem] bg-slate-900/50 border border-slate-800 relative overflow-hidden text-center"
            >
                <!-- Background Accent -->
                <div
                    class="absolute -top-24 -right-24 w-64 h-64 bg-emerald-500/10 blur-[100px] rounded-full"
                >
                </div>

                <div
                    class="w-20 h-20 bg-emerald-500/10 border border-emerald-500/20 rounded-full flex items-center justify-center mx-auto mb-8"
                >
                    <CheckCircle className="w-10 h-10 text-emerald-500" />
                </div>

                <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
                    Message Received.
                </h1>
                <p class="text-xl text-slate-400 mb-12 leading-relaxed">
                    Thank you for reaching out. We've received your inquiry and
                    our lead engineer will contact you shortly to discuss your
                    project.
                </p>

                <a
                    href="/"
                    class="inline-flex items-center gap-2 px-8 py-4 bg-white text-slate-950 rounded-full font-bold hover:bg-slate-200 transition-all group"
                >
                    <ArrowLeft
                        className="w-4 h-4 group-hover:-translate-x-1 transition-transform"
                    />
                    Back to Home
                </a>
            </div>
        </div>
    </main>
    <Footer />
</Layout>
