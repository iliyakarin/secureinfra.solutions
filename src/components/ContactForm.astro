---
import { Send, Calendar } from "lucide-react";
---

<section id="contact" class="py-24 md:py-32">
    <div class="container mx-auto px-6">
        <div
            class="max-w-6xl mx-auto rounded-[2.5rem] bg-gradient-to-b from-slate-900 to-slate-950 border border-slate-800 p-8 md:p-12 relative overflow-hidden"
        >
            <!-- Subtle Background Gradient -->
            <div
                class="absolute -top-24 -right-24 w-64 h-64 bg-emerald-500/10 blur-[100px] rounded-full"
            >
            </div>

            <div class="grid lg:grid-cols-2 gap-12 relative">
                <!-- Left Column: Form -->
                <div>
                    <h3 class="text-3xl font-bold text-white mb-6">
                        Get in Touch
                    </h3>
                    <p class="text-slate-400 mb-8 leading-relaxed">
                        Fill out the form and our lead engineer will get back to
                        you within 24 hours to discuss your project
                        requirements.
                    </p>

                    <form
                        action="https://formspree.io/f/xaqedkjj"
                        method="POST"
                        class="space-y-4"
                    >
                        <input
                            type="hidden"
                            name="_subject"
                            value="New Inquiry from SecureInfra website"
                        />
                        <input
                            type="hidden"
                            name="_next"
                            value="https://secureinfra.solutions/thank-you/"
                        />

                        <div class="grid sm:grid-cols-2 gap-4">
                            <div class="space-y-2">
                                <label
                                    for="full-name"
                                    class="text-xs font-bold uppercase tracking-wider text-slate-500 ml-1"
                                    >Your Name</label
                                >
                                <input
                                    type="text"
                                    id="full-name"
                                    name="name"
                                    placeholder="John Doe"
                                    class="w-full bg-slate-950 border border-slate-800 rounded-xl px-4 py-3 text-white placeholder:text-slate-700 focus:outline-none focus:ring-2 focus:ring-emerald-500/50 focus:border-emerald-500/50 transition-all text-sm"
                                    required
                                />
                            </div>
                            <div class="space-y-2">
                                <label
                                    for="company"
                                    class="text-xs font-bold uppercase tracking-wider text-slate-500 ml-1"
                                    >Company</label
                                >
                                <input
                                    type="text"
                                    id="company"
                                    name="company"
                                    placeholder="Acme Inc."
                                    class="w-full bg-slate-950 border border-slate-800 rounded-xl px-4 py-3 text-white placeholder:text-slate-700 focus:outline-none focus:ring-2 focus:ring-emerald-500/50 focus:border-emerald-500/50 transition-all text-sm"
                                />
                            </div>
                        </div>

                        <div class="space-y-2">
                            <label
                                for="email-address"
                                class="text-xs font-bold uppercase tracking-wider text-slate-500 ml-1"
                                >Your Email</label
                            >
                            <input
                                type="email"
                                id="email-address"
                                name="email"
                                placeholder="john@company.com"
                                class="w-full bg-slate-950 border border-slate-800 rounded-xl px-4 py-3 text-white placeholder:text-slate-700 focus:outline-none focus:ring-2 focus:ring-emerald-500/50 focus:border-emerald-500/50 transition-all text-sm"
                                required
                            />
                        </div>

                        <div class="space-y-2">
                            <label
                                for="project-message"
                                class="text-xs font-bold uppercase tracking-wider text-slate-500 ml-1"
                                >Your Message</label
                            >
                            <textarea
                                id="project-message"
                                name="message"
                                rows="3"
                                placeholder="Tell us about your needs..."
                                class="w-full bg-slate-950 border border-slate-800 rounded-xl px-4 py-3 text-white placeholder:text-slate-700 focus:outline-none focus:ring-2 focus:ring-emerald-500/50 focus:border-emerald-500/50 transition-all text-sm resize-none"
                                required></textarea>
                        </div>

                        <button
                            type="submit"
                            class="w-full bg-emerald-600 hover:bg-emerald-500 text-white font-bold py-4 rounded-xl transition-all flex items-center justify-center gap-2 group"
                        >
                            Send Message
                            <Send
                                className="w-4 h-4 group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform"
                            />
                        </button>
                    </form>
                </div>

                <!-- Right Column: Calendly -->
                <div class="flex flex-col">
                    <h3 class="text-3xl font-bold text-white mb-6">
                        Schedule a Call
                    </h3>
                    <p class="text-slate-400 mb-6 leading-relaxed">
                        Prefer a direct conversation? Book a 30-minute technical
                        deep-dive with our lead architect to discuss your
                        infrastructure goals.
                    </p>

                    <div
                        class="calendly-container flex-grow min-h-[500px] rounded-xl overflow-hidden bg-slate-950 border border-slate-800"
                    >
                        <!-- Calendly inline widget begin -->
                        <div
                            class="calendly-inline-widget w-full h-full"
                            data-url="https://calendly.com/iliyakarin-it/meeting-with-iliya?hide_landing_page_details=1&hide_gdpr_banner=1&background_color=020617&text_color=ffffff&primary_color=10b981"
                            style="min-width:320px;height:580px;"
                        >
                        </div>
                        <script
                            type="text/javascript"
                            src="https://assets.calendly.com/assets/external/widget.js"
                            async></script>
                        <!-- Calendly inline widget end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
