---
import { Send } from "lucide-react";
---

<section id="contact" class="py-24 md:py-32">
    <div class="container mx-auto px-6">
        <div
            class="max-w-4xl mx-auto rounded-[2.5rem] bg-gradient-to-b from-slate-900 to-slate-950 border border-slate-800 p-8 md:p-16 relative overflow-hidden"
        >
            <!-- Subtle Background Gradient -->
            <div
                class="absolute -top-24 -right-24 w-64 h-64 bg-emerald-500/10 blur-[100px] rounded-full"
            >
            </div>

            <div class="grid lg:grid-cols-2 gap-16 relative">
                <div>
                    <h3 class="text-3xl md:text-4xl font-bold text-white mb-6">
                        Ready to scale your infrastructure?
                    </h3>
                    <p class="text-slate-400 mb-8 leading-relaxed">
                        Fill out the form and our lead engineer will get back to
                        you within 24 hours to discuss your project requirements
                        and how we can assist.
                    </p>

                    <div class="space-y-4">
                        <div
                            class="flex items-center gap-3 text-sm text-slate-300"
                        >
                            <div
                                class="w-1.5 h-1.5 rounded-full bg-emerald-500"
                            >
                            </div>
                            Direct contact with senior leads
                        </div>
                        <div
                            class="flex items-center gap-3 text-sm text-slate-300"
                        >
                            <div
                                class="w-1.5 h-1.5 rounded-full bg-emerald-500"
                            >
                            </div>
                            Transparent pricing & engagement models
                        </div>
                        <div
                            class="flex items-center gap-3 text-sm text-slate-300"
                        >
                            <div
                                class="w-1.5 h-1.5 rounded-full bg-emerald-500"
                            >
                            </div>
                            No-obligation technical consultation
                        </div>
                    </div>
                </div>

                <form
                    action="https://formspree.io/f/xaqedkjj"
                    method="POST"
                    class="space-y-4"
                >
                    <div class="grid sm:grid-cols-2 gap-4">
                        <div class="space-y-2">
                            <label
                                for="name"
                                class="text-xs font-bold uppercase tracking-wider text-slate-500 ml-1"
                                >Name</label
                            >
                            <input
                                type="text"
                                id="name"
                                name="name"
                                placeholder="John Doe"
                                class="w-full bg-slate-950 border border-slate-800 rounded-xl px-4 py-3 text-white placeholder:text-slate-700 focus:outline-none focus:ring-2 focus:ring-emerald-500/50 focus:border-emerald-500/50 transition-all text-sm"
                                required
                            />
                        </div>
                        <div class="space-y-2">
                            <label
                                for="company"
                                class="text-xs font-bold uppercase tracking-wider text-slate-500 ml-1"
                                >Company</label
                            >
                            <input
                                type="text"
                                id="company"
                                name="company"
                                placeholder="Acme Inc."
                                class="w-full bg-slate-950 border border-slate-800 rounded-xl px-4 py-3 text-white placeholder:text-slate-700 focus:outline-none focus:ring-2 focus:ring-emerald-500/50 focus:border-emerald-500/50 transition-all text-sm"
                            />
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label
                            for="email"
                            class="text-xs font-bold uppercase tracking-wider text-slate-500 ml-1"
                            >Business Email</label
                        >
                        <input
                            type="email"
                            id="email"
                            name="email"
                            placeholder="john@company.com"
                            class="w-full bg-slate-950 border border-slate-800 rounded-xl px-4 py-3 text-white placeholder:text-slate-700 focus:outline-none focus:ring-2 focus:ring-emerald-500/50 focus:border-emerald-500/50 transition-all text-sm"
                            required
                        />
                    </div>

                    <div class="space-y-2">
                        <label
                            for="message"
                            class="text-xs font-bold uppercase tracking-wider text-slate-500 ml-1"
                            >Project Description</label
                        >
                        <textarea
                            id="message"
                            name="message"
                            rows="4"
                            placeholder="Tell us about your infrastructure or outstaffing needs..."
                            class="w-full bg-slate-950 border border-slate-800 rounded-xl px-4 py-3 text-white placeholder:text-slate-700 focus:outline-none focus:ring-2 focus:ring-emerald-500/50 focus:border-emerald-500/50 transition-all text-sm resize-none"
                            required></textarea>
                    </div>

                    <button
                        type="submit"
                        class="w-full bg-emerald-600 hover:bg-emerald-500 text-white font-bold py-4 rounded-xl transition-all flex items-center justify-center gap-2 group mt-2"
                    >
                        Send Message
                        <Send
                            className="w-4 h-4 group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform"
                        />
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>
